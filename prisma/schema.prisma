generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum DocumentType {
  CC
  TI
  CE
}

model Student {
  id              String     @id
  name            String
  lastname        String
  documentType    DocumentType
  documentNumber  String
  email           String  @unique
  password        String

  programId       String
  program         Program @relation(fields: [programId], references: [id])

  StudentSubject  StudentSubject[]

  @@map("students")
}


model StudentSubject {
  studentId       String
  subjectId       String

  student         Student @relation(fields: [studentId], references: [id])
  subject         Subject @relation(fields: [subjectId], references: [id])

  @@id([studentId, subjectId])

  @@map("student_subject")
}

model Teacher {
  id              String     @id
  name            String
  
  subjects        Subject[]

  @@map("teachers")
}

model Subject {
  id              String     @id
  name            String
  credits         Int        @default(3)

  teacherId       String
  teacher         Teacher @relation(fields: [teacherId], references: [id])

  StudentSubject  StudentSubject[]

  @@map("subjects")
}

model Program {
  id              String     @id
  name            String
  totalCredits    Int

  students        Student[]
  @@map("programs")
}